model User {
    id             Int        @id @default(autoincrement())
    firstName      String
    lastName       String
    email          String     @unique
    identification String     @unique
    phone          String     @unique
    password       String
    address        String
    image          Image?     @relation(fields: [imageId], references: [id])
    imageId        Int?       @unique
    Seller         Seller?
    createdAt      DateTime?
    updatedAt      DateTime?
    deletedAt      DateTime?
    roles          RoleUser[]
}
